<div class="w-full flex justify-center items-center p-8">
  <div class="flex flex-col card gap-4">
    <h2 class="text-xl">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'flex flex-col gap-2'}) do |f| %>
      <div class="field">
        <%= f.label :email, class: 'text-sm'%><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="field">
        <%= f.label :password, class: 'text-sm'%><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
